<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_from_app_bar"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/spacing_normal"
        android:paddingRight="@dimen/spacing_normal">

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:layout_width="0px"
            android:layout_height="0px" />

        <EditText
            android:layout_width="@dimen/size_zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="@dimen/spacing_small"
            android:fontFamily="@font/noto_sans"
            android:hint="@string/search_by_name"
            android:maxLength="30"
            android:padding="@dimen/spacing_moderate"
            android:textSize="@dimen/text_size_normal_semi" />

        <View
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:layout_marginTop="@dimen/margin_slightly_small"
            android:background="@drawable/ic_filter" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="right"
        android:paddingLeft="@dimen/spacing_normal"
        android:paddingRight="@dimen/spacing_normal">

        <TextView
            android:id="@+id/result_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="results found"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_small"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:layout_marginBottom="@dimen/margin_from_app_bar">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:background="@color/colorBackground">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fvrt_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:paddingStart="@dimen/spacing_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:src="@drawable/ic_favorite"/>

                <ImageView
                    android:id="@+id/all_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/spacing_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:src="@drawable/ic_all_contacts"/>
            </LinearLayout>

            <ListView
                android:id="@+id/contact_list"
                android:layout_width="@dimen/size_zero"
                android:layout_height="1000dp"
                android:layout_weight="1"
                android:divider="#b5b5b5"
                android:dividerHeight="@dimen/no_divider"
                android:isScrollContainer="false"
                android:listSelector="@drawable/list_selector"
                android:scrollbars="none" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>