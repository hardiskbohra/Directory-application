<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="CustomToolbarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:color">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="CustomPopupStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="overlapAnchor">false</item>
        <item name="android:textSize">13sp</item>
        <item name="android:dropDownVerticalOffset">-1dp</item>
    </style>


    <!--&lt;!&ndash; Splash Screen &ndash;&gt;-->
    <!--<style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
        <!--<item name="android:windowBackground">@drawable/directory_splash_screen</item>-->
    <!--</style>-->


    <!-- Edit Text Style -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#000</item>
        <item name="android:textColorHint">#AAA</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:paddingRight">10dp</item>
    </style>
</resources>
